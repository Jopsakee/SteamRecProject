@page
@using System.Globalization
@model SteamRec.Web.Pages.ProfileModel
@{
    ViewData["Title"] = "Profile-based Recommendations";

    string ReviewLabel(double scoreAdj, int total)
    {
        if (total <= 0) return "No user reviews";

        var pct = Math.Clamp(scoreAdj, 0.0, 1.0) * 100.0;

        if (pct >= 95.0) return "Overwhelmingly Positive";
        if (pct >= 85.0) return "Very Positive";
        if (pct >= 75.0) return "Mostly Positive";
        if (pct >= 55.0) return "Mixed";
        if (pct >= 40.0) return "Mostly Negative";
        if (pct >= 20.0) return "Very Negative";
        return "Overwhelmingly Negative";
    }

    string ReviewBadgeClass(double scoreAdj, int total)
    {
        if (total <= 0) return "bg-secondary";

        var pct = Math.Clamp(scoreAdj, 0.0, 1.0) * 100.0;

        if (pct >= 75.0) return "bg-success";
        if (pct >= 55.0) return "bg-warning text-dark";
        return "bg-danger";
    }
}

<div class="steam-container mt-4">
    <h1 class="steam-title mb-3">Steam Profile Recommender</h1>
    <p class="steam-subtitle">Enter your SteamID64 to get recommendations based on your library.</p>
    <p class="text-muted">Loaded games in catalogue: @Model.TotalGames</p>

    <form method="post" class="mb-4 steam-card p-3">
        <div class="mb-3">
            <label asp-for="SteamId" class="form-label">SteamID64</label>
            <input asp-for="SteamId" class="form-control" placeholder="e.g. 7656119XXXXXXXXXX" />
        </div>

        <div class="mb-3">
            <label asp-for="Algorithm" class="form-label">Recommendation algorithm</label>
            <select asp-for="Algorithm" class="form-select">
                <option value="content">Content-based (tags/genres/reviews)</option>
                <option value="collab" disabled="@(!Model.CollaborativeAvailable)">
                    Collaborative (ML.NET Matrix Factorization)
                </option>
            </select>
        </div>

        <div class="form-check mb-3">
            <input asp-for="ContributeToCollaborative" class="form-check-input" type="checkbox" />
            <label asp-for="ContributeToCollaborative" class="form-check-label">
                Add my library to interactions.csv (to improve collaborative model)
            </label>
        </div>

        <button type="submit" class="btn steam-btn-primary">Load my library</button>
    </form>

    @if (Model.MatchedOwnedGames.Any())
    {
        <h2 class="steam-section-title">Matched Library Games</h2>
        <div class="steam-card p-3 mb-4">
            <table class="table table-dark table-striped table-sm mb-0">
                <thead>
                    <tr>
                        <th>AppID</th>
                        <th>Name</th>
                        <th>Playtime (hours)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var g in Model.MatchedOwnedGames.Take(25))
                    {
                        <tr>
                            <td>@g.AppId</td>
                            <td>@g.Name</td>
                            <td>@g.PlaytimeHours.ToString("0.0")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (Model.Recommendations.Any())
    {
        <h2 class="steam-section-title">Recommended for You</h2>
        <div class="steam-card p-3">
            <table class="table table-dark table-striped table-sm mb-0"
                   data-radar-labels="@Model.SerializeRadarLabels()"
                   data-radar-user="@Model.SerializeValues(Model.UserRadarValues)">
                <thead>
                    <tr>
                        <th>AppID</th>
                        <th>Name</th>
                        <th>Similarity / CF Score</th>
                        <th>Overall</th>
                        <th>Reviews</th>
                        <th>Review summary</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var r in Model.Recommendations)
                {
                    var pct = Math.Clamp(r.ReviewScoreAdj, 0.0, 1.0) * 100.0;
                    var label = ReviewLabel(r.ReviewScoreAdj, r.ReviewTotal);
                    var badge = ReviewBadgeClass(r.ReviewScoreAdj, r.ReviewTotal);

                    <tr class="recommendation-row"
                        data-recommendation-row="true"
                        data-app-id="@r.AppId"
                        data-game-name="@r.Name"
                        data-game-radar="@Model.SerializeValues(r.GameRadarValues)">
                        <td>@r.AppId</td>
                        <td>@r.Name</td>
                        <td>@r.Similarity.ToString("0.000")</td>
                        <td>@r.OverallScore.ToString("0.000")</td>
                        <td>@r.ReviewTotal</td>
                        <td>
                            <span class="badge @badge">@label</span>
                            @if (r.ReviewTotal > 0)
                            {
                                <span class="text-muted ms-2">@pct.ToString("0.0")%</span>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>
